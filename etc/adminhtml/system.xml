<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="banner" translate="label" sortOrder="300">
            <label>Manage Banner</label>
        </tab>
        <section id="breno_banner" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Banner</label>
            <tab>banner</tab>
            <resource>Breno_Banner::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is banner active?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>            
            </group>
        </section>
    </system>
</config>
